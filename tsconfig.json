{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "module": "commonjs",
      "declaration": true,
      "esModuleInterop": true,
      "target": "es2019",
      "sourceMap": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "removeComments": true,
      "skipLibCheck": true
    },
    "include": ["src"]
}
